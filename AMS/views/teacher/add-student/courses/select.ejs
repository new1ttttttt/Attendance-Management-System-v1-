<div class="container">
    <div class="row justify-content-center ">
        <div class="col-md-11 card section-common section-common-padding ">
            <h4 class="text-center pb-3">Choose a Course</h4>

            <% if (courses.length> 0) { %>
                <form action="/students-dashboard/add" method="post">
                    <div class="form-group">
                        <label for="courses" class="form-label">Choose a Course :</label>
                        <select class="form-select" name="course_id">
                            <% courses.forEach(course=> { %>
                                <option value="<%= course._id %>">
                                    <%= course.name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                   <div class="text-center">
                        <button type="submit" class="btn btn-primary mt-3 px-4">Next</button>
                   </div>
                </form>
                <% } else { %>
                    <p>You are not assigned to any course.</p>
                <% } %>
        </div>
    </div>
</div>