<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12 section-common section-common-padding">
      <div >
        <div >
          <h4 class="text-center py-4">Update Student Info</h4>
        </div>
        <div class="card-body">
          <form action="/student/<%= student._id %>/update" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="student_id">Student ID:</label>
              <input type="number" class="form-control" name="student_id" value="<%= student.student_id %>">
            </div>
            <div class="form-group">
              <label for="name">Name:</label>
              <input type="text" class="form-control" name="name" value="<%= student.name %>">
            </div>
            <div class="form-group">
              <label for="name">Upload Image:</label>
              <input type="file" class="form-control" name="image">
            </div>
          <div class="text-center">
              <button type="submit" class="btn btn-primary text-center mt-3">Update</button>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


