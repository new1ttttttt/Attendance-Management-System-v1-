<div class="container">
    <div class="row justify-content-center">
      <div class="col-md-12 section-common section-common-padding">
        <div class="">
          <div class="">
            <h4 class="text-center py-4">Profile</h4>
          </div>
          <div class="card-body">
            <form action="/student/<%= student._id %>/update" method="POST">
             <div class="my-3">
              <img src="/uploads/<%= student.image %>" alt="Student image is not set">
             </div>
              <div class="form-group">
                <label for="student_id" class="pe-3"><b>Student ID:</b></label>
               
                <% if (student.student_id) { %>
                <span >
                  <%= student.student_id %>
                </span>
                
                <%} else { %>
                 Not set
                <% } %>
                
              </div>
              <div class="form-group">
                <label for="name"><b>Name</b>:</label>
                <span class="ps-3"><%= student.name %></span>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  